<model><file>AFM_UG/model.xml</file><enabled>true</enabled></model>
<model><file>Government_UG/model.xml</file><enabled>false</enabled></model>
<!--<model><file>Government_GREQAM/model.xml</file><enabled>true</enabled></model>-->

</models>

<environment>

<functionFiles>
<file>my_library_functions.c</file>
<!--<file>Firm_Library_Functions.c</file>-->
<!--<file>Household_Library_Functions.c</file>-->
</functionFiles>
 
<timeUnits>

<timeUnit>
 <name>daily</name>
 <unit>iteration</unit>
 <period>1</period>
</timeUnit>

<timeUnit>
 <name>weekly</name>
 <unit>daily</unit>
 <period>5</period>
</timeUnit>

<timeUnit>
 <name>monthly</name>
 <unit>weekly</unit>
 <period>4</period>
</timeUnit>

<timeUnit>
 <name>quarterly</name>
 <unit>monthly</unit>
 <period>3</period>
</timeUnit>

<timeUnit>
 <name>yearly</name>
 <unit>monthly</unit>
 <period>12</period>
</timeUnit>

</timeUnits>

</environment>

