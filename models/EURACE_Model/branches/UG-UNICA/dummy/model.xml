<agents>

<xagent>
<name>Firm</name>
<description></description>

<memory>
<variable><type>int</type><name>credit_dummy</name><description></description></variable>
</memory>

<functions>

<function>
<name>Firm_planned_production_costs_dummy</name>
<description>must set PLANNED_PRODUCTION_COSTS</description>
<currentState>Firm_Start_Producer_Role</currentState>
<nextState>02</nextState>
</function>

<function>
<name>Firm_credit_market_dummy</name>
<description>To Do</description>
<currentState>Firm_Start_Credit_Role</currentState>
<nextState>Firm_End_Credit_Role</nextState>
<condition>
<lhs><lhs><value>a.external_financial_needs</value></lhs><op>GT</op><rhs><value>0.0</value></rhs></lhs>
 <op>AND</op>
<rhs><lhs><value>a.credit_dummy</value></lhs><op>EQ</op><rhs><value>1</value></rhs> --></rhs>
</condition>
</function>

<function>
<name>Firm_labour_good_market_dummy</name>
<description></description>
<currentState>Firm_End_Financial_Management</currentState>
<nextState>Firm_Start_Financial_Management_Role</nextState>
</function>

</functions>

</xagent>


<xagent>
<name>Household</name>
<description></description>

<functions>

<function>
<name>Household_labour_good_market_dummy</name>
<description></description>
<currentState>Start_Household_Labour_Role</currentState>
<nextState>15</nextState>
</function>

</functions>

</xagent>


</agents>

<messages>
<message>
<name>unemployment_notification</name>
<description>Household sends unemployment notification to gov, applying for unemployment benefits.</description>
<variables>
<variable><type>int</type><name>gov_id</name><description></description></variable>
<variable><type>double</type><name>last_labour_income</name><description></description></variable>
</variables>
</message>


</messages>

</xmodel>
