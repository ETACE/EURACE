<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE xmodel SYSTEM "../dtd/XMML.dtd">
<xmodel version="2">

<name>Investment_Goods_Market</name>
<version>pre-Genoa</version>
<description></description>

<environment>

<functionFiles>
<file>IGfirm_functions.c</file>
</functionFiles>
</environment>

<agents>

<xagent>
<name>IGFirm</name>
<memory>
<variable><type>double</type><name>productivity</name></variable>
<variable><type>int</type><name>innovation_probability</name></variable>
<variable><type>double</type><name>productivity_progress</name></variable>
<variable><type>double</type><name>capital_good_price</name></variable>
<variable><type>double</type><name>revenue_per_day</name></variable>
<variable><type>int</type><name>day_of_month_to_act</name></variable>
</memory>
<functions>

<function><name>IGFirm_update_productivity_price</name>
<current_state>start_IGFirm</current_state>
<next_state>01</next_state>
<condition>day_of_month_to_act</condition>
</function>

<function><name>IGFirm_idle</name>
<current_state>start_IGFirm</current_state>
<next_state>01</next_state>
<condition>not_day_of_month_to_act</condition>
</function>

<function><name>IGFirm_send_quality_price_info</name>
<current_state>01</current_state>
<next_state>02</next_state>
<output><messagetype>productivity</messagetype></output>
</function>

<function><name>IGFirm_send_capital_good</name>
<current_state>02</current_state>
<next_state>03</next_state>
<input><messagetype>capital_good_request</messagetype></input>
<output><messagetype>capital_good_delivery</messagetype></output>
</function>

<function><name>IGFirm_receive_payment</name>
<current_state>03</current_state>
<next_state>end</next_state>
<input><messagetype>pay_capital_goods</messagetype></input>
<output><messagetype>capital_good_profit_distribution</messagetype></output>
</function>

</functions>
</xagent>

</agents>

<messages>

<message>
<name>productivity</name>
<variable><type>int</type><name>IGfirm_id</name></variable>
<variable><type>double</type><name>cap_productivity</name></variable>
<variable><type>double</type><name>cap_good_price</name></variable>
</message>

<message>
<name>capital_good_request</name>
<variable><type>int</type><name>firm_id</name></variable>
<variable><type>double</type><name>capital_good_demand</name></variable>
</message>

<message>
<name>capital_good_profit_distribution</name>
<variable><type>double</type><name>capital_good_profit_shares</name></variable>
</message>

<message>
<name>capital_good_delivery</name>
<variable><type>int</type><name>firm_id</name></variable>
<variable><type>double</type><name>capital_good_delivery_volume</name></variable>
<variable><type>double</type><name>productivity</name></variable>
<variable><type>double</type><name>capital_good_price</name></variable>
</message>


<message>
<name>dividend</name>
<variable><type>double</type><name>dividend</name></variable>
</message>


<message>
<name>pay_capital_goods</name>
<variable><type>int</type><name>firm_id</name></variable>
<variable><type>double</type><name>capital_bill</name></variable>
<variable><type>double</type><name>share_net_investments</name></variable>
</message>

</messages>

</xmodel>
